<!--pages/main/main.wxml-->
<view class="head">
    <view class="head_word head_box">
        <text>首页</text>
    </view>
    <view class="head_img head_box">
        <image class="head_img_src" src="/pages/icon/confirm.png"/>
    </view>
</view>
<view class="card" bindtap="detail" wx:for="{{data}}">
    <view class="card_img">
        <image class="card_img" src="cloud://cloud1-5gsp7h3z75dd9ec2.636c-cloud1-5gsp7h3z75dd9ec2-1307453942/images/{{item.img}}" mode="aspectFill"></image>
    </view>
    <view class="card_word">
        <view class="card_word_big_txt card_word_mini_txt">{{item.word1}}</view>
        <view class="card_word_big_txt">{{item.word2}}</view>
        <view class="card_word_big_txt card_word_small_txt">{{item.word3}}</view>
    </view>
</view>
<view class="buttom"></view>