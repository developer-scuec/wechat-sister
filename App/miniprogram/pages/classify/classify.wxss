/* pages/classify/classify.wxss */
page{
    background-color: white;
    position: fixed;
}
.page{
    width: 100%;
    height: 100%;
}
.head{
    width: 100%;
    height: 300rpx;
    border-bottom: 1rpx solid rgb(238, 237, 237);
}
.head_box{
    margin-top: 200rpx;
    float: left;
}
.head_img_src{
    width: 70rpx;
    height: 70rpx;
    margin-left: 470rpx;
}
.head_word{
    margin-left: 50rpx;
    font-size: 60rpx;
    font-weight: 700;
    font-family:‘Franklin Gothic Medium’, ‘Arial Narrow’, Arial, sans-serif;
}
.card{
    width: 40%;
    height: 400rpx;
    background-color: white;
    border-radius: 25rpx;
    box-shadow: 10px 10px 20px  #a8a5a5;
    float: left;
    margin-left: 50rpx;
    margin-bottom: 50rpx;
}

.card_img{
    width: 100%;
    height: 300rpx;
    border-top-right-radius: 25rpx;
    border-top-left-radius: 25rpx;
}
.card_img_src{
    width: 100%;
    height: 100%;
    border-top-right-radius: 25rpx;
    border-top-left-radius: 25rpx;
}

.card_word{
    width: 100%;
    height: 100rpx;
    background-color: white;
    border-bottom-left-radius: 25rpx;
    border-bottom-right-radius: 25rpx;
}
.card_word_big_txt{
    margin-left: 30rpx;
    margin-top: 20rpx;
    font-family:‘Franklin Gothic Medium’, ‘Arial Narrow’, Arial, sans-serif;
}
.card_word_small_txt{
    font-size: 35rpx;
    font-weight: 300;
}
.buttom{
    width: 100%;
    height: 100rpx;
}
.left{
  width: 25%;
  height: 1200rpx;
  background-color: rgb(238, 237, 237);
  float: left;
}
.right{
  width: 75%;
  height: 1200rpx;
  background-color: white;
  float: left;
}
.block{
  width: 100%;
  height: 80rpx;
  background-color: rgb(238, 237, 237);
  text-align: center;
  line-height: 80rpx;
  color: rgb(131, 130, 130);
  font-size: 30rpx;
  font-weight: 500;
}
.block_click{
  width: 100%;
  height: 80rpx;
  background-color: white;
  text-align: center;
  line-height: 80rpx;
  color: #2962ca;
  font-size: 30rpx;
  font-weight: 500;
}
